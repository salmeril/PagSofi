const secondMessages = [
    "Â¿SabÃ­as que la IA puede ayudarte en tus tareas diarias?",
    "En el siguiente audio te explico cÃ³mo.",
    { audio: '/infografia-1/src/audio/CaracterAiTodoJunto2.mp3', id: 2 }
